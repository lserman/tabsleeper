{
  "name": "Tabsleeper",
  "description": "Closes the current tab after a certain amount of time.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "background",
    "storage",
    "activeTab",
    "alarms"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js",
      "js/tab.js",
      "js/timer.js"
    ],
    "persistent": false
  }
}
